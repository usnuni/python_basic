
# Q1

a = "Life is too short, you need python"

if "wife" in a: print("wife")
elif "python" in a and "you" not in a: print("python")
elif "shirt" not in a: print("shirt")
elif "need" in a: print("need")
else: print("none")


# Q2 1000까지 숫자 중 3의 배수를 모두 더하려면?

# 답 1
a = 0
t = 0
while a < 1000 :
    a = a + 1
    if a % 3 != 0 :
        continue
    t = t + a
    if a == 999 : 
    print(t)
    
# 답 2
result = 0
y = 1

while y <= 1000:
    if y % 3 == 0 :
        result += y
    y += 1
print(result)

    
# Q3 별 트리 만들어보기

# 답 1

s = 0
while s < 5 :
    s = s + 1
    print("*" * s)

# 답 2

o = 0
while True :
    o += 1
    if o > 5 :
        break
    print("*" * o)


# Q5 for 사용해서 1부터 100까지 출력

rr = range(1, 101)
for i in rr :
    print(i, end = " ")
